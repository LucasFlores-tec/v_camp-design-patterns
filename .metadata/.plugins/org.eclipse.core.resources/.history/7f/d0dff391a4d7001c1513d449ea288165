package br.com.virtualoutletstore.facade.order;

import br.com.virtualoutletstore.composite.cart.Cart;
import br.com.virtualoutletstore.iterator.orderlist.OrderList;

/**
 * Order (FACADE)
 */
public class Order {
	
	private Cart cart;

	private String shipping;
	
	private String status;
	
	public Order(Cart cart, String shipping, String status) {
		this.cart = cart;
		this.shipping = shipping;
		this.status = status;
	}

	public Cart getOrderCart() {
		return cart;
	}
	
	public void setOrderCart(Cart cart) {
		this.cart = cart;
	}

	public String getOrderShipping() {
		return shipping;
	}
	
	public void setOrderShipping(String shipping) {
		this.shipping = shipping;
	}

	public String getOrderStatus() {
		return status;
	}
	
	public void setOrderStatus(String status) {
		this.status = status;
		if(status=="cancelled") {
			//setOrderCart(new Cart());
			//setOrderShipping(cart.getShipping(new Cart()));
			
			OrderList.getInstanceOfOrderList().removeOrderFromTheList(new Order(this.cart, this.status, this.status));
			System.out.println("The cancelled order was removed");
		}
	}
	
}
